    <!-- Section Carte Interactive -->
    <section id="carte">
        <h2>Carte Interactive</h2>
        <div id="map"></div>
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
        <script>
            const map = L.map('map').setView([50, 10], 4); // Coordonnées et zoom
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
            }).addTo(map);

            // Ajouter des marqueurs pour les biomes
            L.marker([50, 10]).addTo(map)
                .bindPopup('Forêt : Bois, Fibres, Gibier')
                .openPopup();
            L.marker([52, 12]).addTo(map)
                .bindPopup('Montagnes : Pierre, Minerai de fer');
        </script>
    </section>

    <!-- Section Calculateur de Ressources -->
    <section id="calculateur">
        <h2>Calculateur de Ressources</h2>
        <label for="bois">Quantité de bois nécessaire :</label>
        <input type="number" id="bois" placeholder="Bois">
        <label for="pierre">Quantité de pierre nécessaire :</label>
        <input type="number" id="pierre" placeholder="Pierre">
        <button onclick="calculerRessources()">Calculer</button>
        <p id="resultat"></p>
        <script>
            function calculerRessources() {
                const bois = document.getElementById('bois').value;
                const pierre = document.getElementById('pierre').value;
                const resultat = `Vous avez besoin de ${bois} bois et ${pierre} pierre.`;
                document.getElementById('resultat').textContent = resultat;
            }
        </script>
    </section>

